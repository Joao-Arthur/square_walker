{
    "tasks": {
        "start": "deno run -A --watch=static/,routes/ dev.ts"
    },
    "importMap": "./import_map.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "preact"
    },
    "fmt": {
        "options": {
            "lineWidth": 70,
            "indentWidth": 4
        }
    },
    "lint": {
        "rules": {
            "include": ["explicit-function-return-type"]
        }
    }
}
